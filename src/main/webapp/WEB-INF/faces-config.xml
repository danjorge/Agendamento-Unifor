<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">



	<factory>
		<exception-handler-factory>
			br.unifor.pin.agendamento.exceptions.CustomExceptionHandlerFactory
		</exception-handler-factory>
	</factory>
	
	<!-- Login Inicio -->
	<navigation-rule>
		<from-view-id>/login/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/pages/principal/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fracasso</from-outcome>
			<to-view-id>/login/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cadastro</from-outcome>
			<to-view-id>/login/cadUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Login Fim -->

	<!-- Usuarios Inicio -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/login/cadUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/login/cadUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>voltar</from-outcome>
			<to-view-id>/login/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/usuario/listUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/login/cadUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/usuario/listUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>atualiza</from-outcome>
			<to-view-id>/pages/usuario/atualizaUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/login/cadUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/pages/usuario/listUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/usuario/atualizaUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/pages/usuario/listUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Usuarios Fim -->
	
	<!-- Solicitação início -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>principal</from-outcome>
			<to-view-id>/pages/principal/principal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/principal/principal.xhtml</from-view-id>
		<navigation-case>	
			<from-outcome>cadastrarSolicitacao</from-outcome>
			<to-view-id>/pages/solicitacoes/cadastroSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/principal/principal.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>visualizarSolicitacao</from-outcome>
			<to-view-id>/pages/solicitacoes/visualizarSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/principal/principal.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>pesquisarSolicitacao</from-outcome>
			<to-view-id>/pages/solicitacoes/pesquisarSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Solicitação fim -->
	
	<!-- Agendamento Início -->
	<navigation-rule>
		<from-view-id>/pages/solicitacoes/visualizarSolicitacao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>agendar</from-outcome>
			<to-view-id>/pages/agendamento/agendamento.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/agendamento/agendamento.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cadastrarSolicitacao</from-outcome>
			<to-view-id>/pages/solicitacoes/cadastroSolicitacao.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/agendamento/agendamento.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>pesquisarSolicitacao</from-outcome>
			<to-view-id>/pages/solicitacoes/pesquisarSolicitacao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/principal/principal.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>visualizarAgendamento</from-outcome>
			<to-view-id>/pages/agendamento/visualizarAgendamento.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Agendamento Fim -->
	
	<!-- Manutenção início -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>manutencao</from-outcome>
			<to-view-id>/login/cadUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Manutenção fim -->
	
	<!-- LOGOFF INÍCIO -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>logoff</from-outcome>
			<to-view-id>/logoff.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- LOGOFF FIM -->
	<lifecycle>
		<phase-listener>br.unifor.pin.agendamento.filter.AutorizacaoAgendamentoUniforListener</phase-listener>
	</lifecycle>

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
		</locale-config>
		<resource-bundle>
			<base-name>MessageResources</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>
</faces-config>